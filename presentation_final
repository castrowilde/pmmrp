\begin{frame}
\frametitle{Реакция}
\begin{itemize}
  \item \textbf{$\frac{\partial u}{\partial t} =  u(1-u)(u-a)-v)$}
    \item \textbf{$\frac{\partial v}{\partial t} = u -bv$}
    \item \textbf{u и v са концентрациите на активатор и инхибитор}
    \item \textbf{0 < a < 0.5, b > 0}
\end{itemize}
\end{frame}

